{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "thumbnail": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "categories": {
      "via": "posts",
      "collection": "category",
      "dominant": true
    },
    "author": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    },
    "shown": {
      "type": "boolean",
      "default": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "article",
        "video",
        "podcast"
      ],
      "required": true,
      "unique": false
    },
    "title": {
      "type": "component",
      "repeatable": false,
      "component": "translations.translations"
    },
    "subtitle": {
      "type": "component",
      "repeatable": false,
      "component": "translations.translations"
    },
    "content": {
      "type": "component",
      "repeatable": false,
      "component": "translations.content"
    }
  }
}
